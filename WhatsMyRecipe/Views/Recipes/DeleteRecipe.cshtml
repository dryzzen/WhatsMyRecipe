@model WhatsMyRecipe.Models.Recipe

@{
    ViewData["Title"] = "Delete Recipe";
}

@section Head {
    <link rel="stylesheet" href="~/css/Recipes/deleteRecipe.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <div class="alert alert-warning" role="alert">
        <h4 class="alert-heading">Warning!</h4>
        <p>Are you sure you want to delete this recipe? This action cannot be undone.</p>
    </div>

    <div class="card mt-4">
        <div class="card-body">
            <h4 class="card-title">@Model.Title</h4>

            @if (!string.IsNullOrEmpty(Model.Image))
            {
                <div class="text-center my-3">
                    <img src="@Model.Image" alt="@Model.Title" class="img-fluid rounded recipe-image">
                </div>
            }

            <form asp-action="DeleteRecipe" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt me-2"></i>Delete
                    </button>
                    <a asp-action="DetailsRecipe" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>