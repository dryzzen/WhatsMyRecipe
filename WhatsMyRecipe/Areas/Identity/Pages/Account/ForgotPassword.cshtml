@page
@model ForgotPasswordModel

@section Head {
    <link rel="stylesheet" href="~/css/authorization.css" />
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h1><i class="fas fa-key"></i> @ViewData["Title"]</h1>
            <p class="auth-subtitle">Enter your email to reset your password</p>
        </div>

        <form method="post" class="auth-form">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="form-group">
                <label asp-for="Input.Email" class="form-label">Email Address</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Enter your email" />
                </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 auth-btn">
                <i class="fas fa-paper-plane me-2"></i>Send Reset Link
            </button>

            <div class="auth-links text-center">
                <a asp-page="./Login">Back to Login</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}